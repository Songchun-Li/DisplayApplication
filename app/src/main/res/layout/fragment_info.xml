<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F0EC"
        android:paddingStart="50dp"
        android:paddingEnd="40dp"
        android:paddingTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/info_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="41sp"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="28dp"
                    android:textSize="92sp"
                    android:textColor="#000000"
                    android:text="Aaa"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/info_gender"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/female"/>
            </LinearLayout>

            <TextView
                android:layout_width="500dp"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="#000" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/info_hatch_year_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:text="Hatch Year: "
                    android:textSize="30sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/info_hatch_year_container_1"
                    android:layout_width="42dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="14dp"
                    android:background="@mipmap/year_container"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/info_hatch_year_container_2"
                    android:layout_width="42dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="14dp"
                    android:background="@mipmap/year_container"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/info_hatch_year_container_3"
                    android:layout_width="42dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="14dp"
                    android:background="@mipmap/year_container"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/info_hatch_year_container_4"
                    android:layout_width="42dp"
                    android:layout_height="58dp"
                    android:layout_marginEnd="14dp"
                    android:background="@mipmap/year_container"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/info_band_color_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:text="Band Color: "
                    android:textSize="30sp"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/info_band_color_value_1"
                    android:layout_width="104dp"
                    android:layout_height="19dp"
                    android:background="#F5E83F" />

                <TextView
                    android:id="@+id/info_band_color_value_2"
                    android:layout_width="104dp"
                    android:layout_height="19dp"
                    android:background="#FFAFE3" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="14dp"
                android:id="@+id/main_personality_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personality: "
                android:textSize="42px"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/info_personality_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:textSize="25sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_marginTop="14dp"
                android:id="@+id/info_fun_fact_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun Fact: "
                android:textSize="30sp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/info_fun_fact_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#000000"/>

        </LinearLayout>


    </FrameLayout>


</FrameLayout>